{
  "logging": {
    "logs": {
      "http.handlers": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        },
        "encoder": {
          "format": "console"
        }
      }
    }
  },
  "admin": {
    "listen": ":2019"
  },
  "apps": {
    "tls": {
      "certificates": {
        "automate": [
          "localhost",
          "172.16.80.98"
        ]
      }
    },
    "http": {
      "http_port": 12016,
      "servers": {
        "https_server": {
          "listen": [
            ":2016"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "*",
                    "172.16.80.98"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "客户端IP：{http.request.remote}\n"
                }
              ]
            }
          ]
        }
      }
    }
  }
}