{
  "logging": {
    "logs": {
      "http.handlers": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        },
        "encoder": {
          "format": "console"
        }
      }
    }
  },
  "admin": {
    "listen": ":2019"
  },
  "apps": {
    "http": {
      "http_port": 12016,
      "servers": {
        "https_server": {
          "listen": [
            ":2016"
          ],
          "routes": [
            {
              "handle": [
                {
                  "handler": "static_response",
                  "body": "客户端IP：{http.request.remote}\n"
                }
              ]
            }
          ]
        }
      }
    }
  }
}