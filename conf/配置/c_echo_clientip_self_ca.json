{
  "logging": {
    "logs": {
      "http.handlers": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        },
        "encoder": {
          "format": "console"
        }
      }
    }
  },
  "admin": {
    "listen": ":2019"
  },
  "apps": {
    "tls": {
      "certificates": {
        "load_files": [
          {
            "certificate": "/Users/wuhanjie/workspace/mkcert/locahost+1.pem",
            "key": "/Users/wuhanjie/workspace/mkcert/locahost+1-key.pem"
          }
        ]
      }
    },
    "http": {
      "http_port": 12016,
      "servers": {
        "https_server": {
          "listen": [
            ":2016"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "127.0.0.1",
                    "localhost",
                    "www.baidu.com"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "客户端IP：{http.request.remote}\n"
                }
              ]
            }
          ]
        }
      }
    }
  }
}