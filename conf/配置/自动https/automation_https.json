{
  "logging": {
    "logs": {
      "http.handlers": {
        "level": "DEBUG",
        "writer": {
          "output": "stdout"
        },
        "encoder": {
          "format": "console"
        }
      }
    }
  },
  "admin": {
    "listen": ":2019"
  },
  "apps": {
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "ty.peiyi.work"
            ],
            "key_type": "p384"
          }
        ]
      },
      "disable_ocsp_stapling": false
    },
    "http": {
      "servers": {
        "https_server": {
          "listen": [
            ":2016"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "ty.peiyi.work",
                    "*.peiyi.work"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "客户端IP：{http.request.remote}\n"
                }
              ]
            }
          ]
        }
      }
    }
  }
}